@using EnergyPlatformProject.Models
@model AdminViewModel

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div>
    <table class="table table-striped table-borderless table-responsive-sm ">
        <thead>
            <tr class="table-head">
                <th>Email</th>
                <th>First name</th>
                <th>Last name</th>
                <th>AccessFailCount</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
            <tr>
                <td class="table-element-custom">@Model.Users[i].Email</td>
                <td class="table-element-custom">@Model.Users[i].FirstName</td>
                <td class="table-element-custom">@Model.Users[i].LastName</td>
                <td class="table-element-custom">@Model.Users[i].AccessFailedCount</td>
                <td class="table-element-custom">
                    <a asp-controller="Account" asp-action="UpdateUser" asp-route-email="@Model.Users[i].Email" style="color:black">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>

                    <a asp-controller="Account" asp-action="DeleteUser" asp-route-email="@Model.Users[i].Email" style="color:black">
                        <i class="fa fa-trash"></i>
                    </a>

                    <a asp-controller="Account" asp-action="Chat" asp-route-id="@Model.Users[i].Id" style="color:black">
                        <i class="fa fa-comments" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
