@using EnergyPlatformProject.Models
@model DeviceViewModel

<form asp-controller="Device" asp-action="AddDevice" method="post">
    <div class="form-group row">
        <label asp-for="Description"></label><br>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="MaximuHourlyEnergyConsumtion"></label>
        <input asp-for="MaximuHourlyEnergyConsumtion" class="form-control" />
        <span asp-validation-for="MaximuHourlyEnergyConsumtion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Add device</button>
</form>